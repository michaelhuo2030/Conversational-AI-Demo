<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:checkable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="14:15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Background -->
            <ImageView
                android:id="@+id/ivBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/ai_block2" />
            <!-- Blue border for selected state -->
            <View
                android:id="@+id/vSelectionBorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cov_avatar_selection_border"
                android:visibility="gone" />
            <!-- Container for close icon and text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <!-- Close icon -->
                <ImageView
                    android:id="@+id/ivCloseIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cov_close_icon_selector" />
                <!-- Close text -->
                <TextView
                    android:id="@+id/tvCloseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/common_close"
                    android:textColor="@color/ai_icontext1"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- Bottom bar with checkbox only (no background) -->
            <LinearLayout
                android:id="@+id/llCheckboxBar"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical|end"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <View
                    android:id="@+id/vCheckbox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/cov_avatar_checkbox_selector" />
            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>